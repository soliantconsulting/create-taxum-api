# Ignore everything but root build resources by default
*
!package.json
!pnpm-lock.yaml
!pnpm-workspace.yaml
!packages
packages/*

# Allow specific packages
!packages/api
{%- if features contains "app-config" %}
!packages/app-config
{%- endif %}

# Exclude node_modules and dist within allowed packages
packages/*/node_modules
packages/*/dist
